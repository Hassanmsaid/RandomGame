<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0FFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Gui.SpinFragment">

    <ViewFlipper
        android:id="@+id/spin_view_flipper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/spinning_wheel1"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wheel1" />

                <ImageView
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wheel_marker" />

            </FrameLayout>

            <TextView
                android:id="@+id/rotate_btn1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:textAlignment="center"
                android:paddingTop="@dimen/dimen_8dp"
                android:textStyle="bold"
                android:background="@drawable/button_bg"
                android:text="@string/rotate_btn_txt"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/spinning_wheel2"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wheel2" />

                <ImageView
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wheel_marker" />

            </FrameLayout>

            <TextView
                android:id="@+id/rotate_btn2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:textAlignment="center"
                android:paddingTop="@dimen/dimen_8dp"
                android:textStyle="bold"
                android:background="@drawable/button_bg"
                android:text="@string/rotate_btn_txt"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/spinning_wheel3"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wheel3" />

                <ImageView
                    android:layout_width="@dimen/dimen_40dp"
                    android:layout_height="@dimen/dimen_40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wheel_marker" />

            </FrameLayout>

            <TextView
                android:id="@+id/rotate_btn3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:textAlignment="center"
                android:paddingTop="@dimen/dimen_8dp"
                android:textStyle="bold"
                android:background="@drawable/button_bg"
                android:text="@string/rotate_btn_txt"
                android:textColor="@color/white" />

        </LinearLayout>

    </ViewFlipper>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/spin_icon1"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:src="@drawable/wheel_icon1"/>

        <ImageView
            android:id="@+id/spin_icon2"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:src="@drawable/wheel_icon2"/>

        <ImageView
            android:id="@+id/spin_icon3"
            android:layout_width="@dimen/dimen_40dp"
            android:layout_height="@dimen/dimen_40dp"
            android:src="@drawable/wheel_icon3"/>


    </LinearLayout>


</LinearLayout>